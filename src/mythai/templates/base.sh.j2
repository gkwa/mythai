{% block shebang %}#!/usr/bin/env bash{% endblock %}

{% block shell_flags %}
set -e
set -x
set -u
{% endblock %}

{% block network_wait %}
timeout 1m bash -c '
  echo waiting for network
  until ping -c 1 google.com &>/dev/null
  do
    sleep 1
  done
'
{% endblock %}

{% block cloud_config %}
# Apply cloud-config if present
if [ -f /tmp/cloud-config.yaml ]; then
    sudo cloud-init clean
    sudo cp /tmp/cloud-config.yaml /etc/cloud/cloud.cfg.d/99-custom.cfg
    sudo cloud-init init
    sudo cloud-init modules --mode config
    sudo cloud-init modules --mode final
fi
{% endblock %}

{% block update_ringgem %}
if [[ -d /opt/ringgem ]]; then
    cd /opt/ringgem
    git fetch --quiet
    git reset --hard @{upstream}
fi
{% endblock %}

